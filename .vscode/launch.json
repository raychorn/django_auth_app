        "version": "0.2.0",
        "configurations": [
                {
                        "name": "Django",
                        "type": "python",
                        "request": "launch",
                        "stopOnEntry": true,
                        "pythonPath": "${workspaceRoot}/.venv396/bin/python3.9",
                        "program": "${workspaceRoot}/auth_site/manage.py",
                        "args": [
                            "runserver",
                            "0.0.0.0:8000",
                            "--noreload"                
                        ],
                        "debugOptions": [
                            "WaitOnAbnormalExit",
                            "WaitOnNormalExit",
                            "RedirectOutput",
                            "DjangoDebugging"
                        ]
                },
        ]
}